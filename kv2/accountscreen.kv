<Clickable@ButtonBehavior+BoxLayout>:
    oreintation: 'horizontal'

    canvas.before:
        Color:
            rgb: utils.get_color_from_hex("#ffffffff") if self.state == 'normal' else utils.get_color_from_hex("#EDEDED")
        Rectangle:
            size: self.size
            pos: self.pos




