<BusSelectionScreen>:
    canvas:
        Color:
            rgb:utils.get_color_from_hex("#f5f5f5")
        
        Rectangle:
            size: self.size
            pos: self.pos


    FloatLayout:
        
        MDIconButton:
            pos_hint: {'center_x': .1, 'top': 0.99 }
            icon: 'arrow-left'
            on_release: app.change_screen('home_screen')
            

        MDLabel: 
            pos_hint: {'center_x': .85, 'top': 1 }
            size_hint: 1, 0.1
            text: 'Select Bus'

 #############################################################################               
    
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'top': .87 }
            size_hint: 1 , .88
            
            canvas:
                
                Rectangle:
                    source:'icons/roundedbox10.png'
                    size: self.size
                    pos: self.pos
                   

#################################################################################

    
               
        MDLabel:
            pos_hint: {'right': .42, 'top': .95}
            size_hint: .3 , .1
            text: 'Dar Es Salam'
            #font_size:20


        MDIcon:
            pos_hint: {'center_x': .5, 'top': .95}
            size_hint: .07 , .1
            icon: 'bus'
   
            
                      
        MDLabel:
            pos_hint: {'right': .90, 'top': .95}
            size_hint: .3 , .1
            text: 'Dodoma'
            


   #################################################################################    

        ScrollView:
            pos_hint: {"top": .81, "left": 0.9}
            size_hint: 1, .78
            GridLayout:
                # Banner grid
                id: banner_grid
                cols: 1
                spacing: 5,150
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                #row_force_default: True



#Fixing the bottom of the page issue

        ScrollView:
            pos_hint: {"Right": 1, "top": 0.092}
            size_hint: 1, 1

